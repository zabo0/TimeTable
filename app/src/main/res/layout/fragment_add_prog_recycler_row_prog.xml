<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/fragmetAddProg_recyclerRow_textView_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_margin="5dp"
        android:background="?attr/colorSecondaryVariant"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragmetAddProg_recyclerRow_textView_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text="Day"/>

        <TextView
            android:id="@+id/fragmetAddProg_recyclerRow_textView_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="textStart"
            android:layout_weight="1"
            android:textSize="18sp"
            android:text="09:00-10:00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fragmetAddProg_recyclerRow_textView_typeOfLesson"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:textSize="13sp"
            android:text="type of lesson"/>

        <TextView
            android:id="@+id/fragmetAddProg_recyclerRow_textView_reminder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="remind 1 hour ago"/>


    </LinearLayout>


</LinearLayout>